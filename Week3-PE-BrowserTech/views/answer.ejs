<% include partials/head.ejs %>

<main>
  <section class="block-container">
    <form method="post" action="/<%= pollData.pollName %>" data-name="<%= pollData.pollName %>" id="submit-answer-form">
      <h1><%= pollData.pollQuestion %></h1>
      <fieldset>
        <legend>Jouw antwoord</legend>
        <label>
          <span><%= pollData.pollAnswers[0].name %></span>
          <input checked type="radio" name="answer" value="<%= pollData.pollAnswers[0].name %>">
        </label>
        <label>
          <span><%= pollData.pollAnswers[1].name %></span>
          <input type="radio" name="answer" value="<%= pollData.pollAnswers[1].name %>">
        </label>
        <input type="submit" value="Antwoorden">
        <!-- <input id="answer1" type="submit" name="answer-1" value="<%= pollData.pollAnswer1 %>">
        <input id="answer2" type="submit" name="answer-2" value="<%= pollData.pollAnswer2 %>"> -->
      </fieldset>
    </form>
  </section>
</main>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
